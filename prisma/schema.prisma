// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String
  email    String  @unique
  password String
  role_id  String
  role     Role    @relation(fields: [role_id], references: [id])
  order    Order[]
}

model Role {
  id          String @id @default(cuid())
  role        String
  number_role Int
  user        User[]
}

model Custs {
  id               String    @id @default(cuid())
  name             String
  type             String
  contact          String?
  contact_phone    String?
  email            String?
  npwp             String?
  address          String?
  fincontact       String?
  fincontact_phone String?
  img_logo         String?
  img_akta         String?
  img_nib          String?
  img_npwp         String?
  createdAt        DateTime? @default(now())
  updatedAt        DateTime? @updatedAt
  order            Order[]
}

model Order {
  id                String              @id @default(cuid())
  id_cust           String
  Sales_type        String?
  camp_name         String?
  order_no          String?
  order_date        String?
  period_start      DateTime?
  period_end        DateTime?
  pay_type          String?
  no_mo             String?
  id_user           String
  media_tayang      String?
  rate_type         String?
  sales_approve     Boolean?
  created_At        DateTime?           @default(now())
  updated_At        DateTime?           @updatedAt
  costumer          Custs               @relation(fields: [id_cust], references: [id])
  user              User                @relation(fields: [id_user], references: [id])
  OrderMitra        OrderMitra[]
  payCash           payCash[]
  barter            payBarter[]
  semiBarter        paySemiBarter[]
  kredit            payKredit[]
  termin            payTermin[]
  deposit           payDeposit[]
  oti               OrderTayangIklan[]
  rate_article_cust rate_article_cust[]
  rate_sosmed_cust  rate_sosmed_cust[]
  rate_other_cust   rate_other_cust[]
  rate_cpd_cust     rate_cpd_cust[]
  rate_cpm_cust     rate_cpm_cust[]
}

model Mitra {
  id         String       @id @default(cuid())
  name       String
  status     Boolean?
  OrderMitra OrderMitra[]
  is_deleted Boolean?
  created_At DateTime?    @default(now())
  updated_At DateTime?    @updatedAt
}

model OrderMitra {
  idOrder String
  idMitra String
  order   Order? @relation(fields: [idOrder], references: [id])
  mitra   Mitra? @relation(fields: [idMitra], references: [id])

  @@id([idMitra, idOrder])
}

model rate_article_cust {
  idOrder   String
  idArtikel String
  order     Order?        @relation(fields: [idOrder], references: [id])
  artikel   rate_article? @relation(fields: [idArtikel], references: [id])

  @@id([idOrder, idArtikel])
}

model rate_sosmed_cust {
  idOrder  String
  idSosmed String
  order    Order?       @relation(fields: [idOrder], references: [id])
  sosmed   rate_sosmed? @relation(fields: [idSosmed], references: [id])

  @@id([idOrder, idSosmed])
}

model rate_other_cust {
  idOrder String
  idOther String
  order   Order?              @relation(fields: [idOrder], references: [id])
  other   rate_other_content? @relation(fields: [idOther], references: [id])

  @@id([idOrder, idOther])
}

model rate_cpd_cust {
  idOrder String
  idCpd   String
  order   Order?    @relation(fields: [idOrder], references: [id])
  cpd     rate_cpd? @relation(fields: [idCpd], references: [id])

  @@id([idOrder, idCpd])
}

model rate_cpm_cust {
  idOrder String
  idCpm   String
  order   Order?    @relation(fields: [idOrder], references: [id])
  cpm     rate_cpm? @relation(fields: [idCpm], references: [id])

  @@id([idOrder, idCpm])
}

model payCash {
  idOrder    String
  order      Order?   @relation(fields: [idOrder], references: [id])
  total      Int
  tempo      DateTime
  diskon     Float?
  finalPrice Int?

  @@id([idOrder])
}

model payBarter {
  idOrder    String
  order      Order?    @relation(fields: [idOrder], references: [id])
  nilai      Int
  barang     String?
  tempo      DateTime?
   diskon     Float?
  finalPrice Int?

  @@id([idOrder])
}

model paySemiBarter {
  idOrder     String
  order       Order?   @relation(fields: [idOrder], references: [id])
  nilaiBarter Int
  tempoBarter DateTime
  nilaiCash   Int
  tempoCash   DateTime
  itemBarang  String
  totalRate   Int
  finalRate   Int
   diskon     Float?

  @@id([idOrder])
}

model payKredit {
  idOrder     String
  order       Order?   @relation(fields: [idOrder], references: [id])
  nilaiKredit Int
  tempo       DateTime
  diskon     Float?
  finalRate   Int

  @@id([idOrder])
}

model payTermin {
  idOrder   String
  order     Order?   @relation(fields: [idOrder], references: [id])
  termin_1  Int
  tempo_1   DateTime
  termin_2  Int
  tempo_2   DateTime
  termin_3  Int
  tempo_3   DateTime
  diskon     Float?
  finalRate Int

  @@id([idOrder])
}

model payDeposit {
  idOrder      String
  order        Order? @relation(fields: [idOrder], references: [id])
  totalDeposit Int
  minDeposit   Int
  status       String

  @@id([idOrder])
}

model OrderTayangIklan {
  id        String    @id @default(cuid())
  idOrder   String
  product   String?
  sub       String?
  oti       String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  order     Order?    @relation(fields: [idOrder], references: [id])
}

model rate_article {
  id                    String              @id @default(cuid())
  name                  String
  prmn                  Int?
  mitra                 Int?
  is_custom_price_prmn  Boolean?
  is_custom_price_mitra Boolean?
  note                  String?
  is_deleted            Boolean?
  createdAt             DateTime?           @default(now())
  updatedAt             DateTime?           @updatedAt
  rate_artikel_cust     rate_article_cust[]
}

model rate_sosmed {
  id               String             @id @default(cuid())
  name             String
  instagram        Int?
  facebook         Int?
  rate             Int?
  type             String?
  note             String?
  is_other         Boolean?
  is_custom_price  Boolean?
  is_deleted       Boolean?
  createdAt        DateTime?          @default(now())
  updatedAt        DateTime?          @updatedAt
  rate_sosmed_cust rate_sosmed_cust[]
}

model rate_other_content {
  id              String            @id @default(cuid())
  name            String
  rate            Int?
  note            String?
  is_custom_price Boolean?
  is_deleted      Boolean?
  createdAt       DateTime?         @default(now())
  updatedAt       DateTime?         @updatedAt
  rate_other_cust rate_other_cust[]
}

model rate_cpd {
  id            String          @id @default(cuid())
  name          String
  type          String?
  size          String?
  rate_home     Int?
  rate_detail   Int?
  rate_section  Int?
  is_deleted    Boolean?
  createdAt     DateTime?       @default(now())
  updatedAt     DateTime?       @updatedAt
  rate_cpd_cust rate_cpd_cust[]
}

model rate_cpm {
  id              String          @id @default(cuid())
  name            String
  type            String?
  size            String?
  rate            Int?
  is_deleted      Boolean?
  is_custom_price Boolean?
  createdAt       DateTime?       @default(now())
  updatedAt       DateTime?       @updatedAt
  rate_cpm_cust   rate_cpm_cust[]
}
